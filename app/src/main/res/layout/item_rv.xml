<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.imitationmafengwo.first.FristItemViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{viewModel.onClickListener}"
        >

        <RelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/cover"
                android:text="@{viewModel.description}"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_description"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/cover"
                android:layout_toRightOf="@+id/cover"
                android:text="@{viewModel.size}"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/size"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cover"
                android:text="@{viewModel.price}"
                android:textColor="@color/red"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_moq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_price"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cover"
                android:text="@{viewModel.moq}"
                android:textColor="@color/blue"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_updateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_moq"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cover"
                android:text="@{viewModel.updateTime}"
                android:textColor="@color/black"
                android:textSize="11dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/content_layout"
            android:layout_height="1px"
            android:background="@color/catory_color"
            />
    </RelativeLayout>
</layout>